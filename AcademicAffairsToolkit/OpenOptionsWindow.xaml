<Fluent:RibbonWindow x:Class="AcademicAffairsToolkit.OpenOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademicAffairsToolkit"
        xmlns:Fluent="urn:fluent-ribbon"
        mc:Ignorable="d"
        Title="File open options"
        Height="Auto" Width="300" MinHeight="260"
        WindowStartupLocation="CenterOwner">

    <Fluent:RibbonWindow.Resources>
        <Style x:Key="OpenOptionsSpinnerStyle" TargetType="Fluent:Spinner">
            <Setter Property="Format" Value="N0"/>
            <Setter Property="InputWidth" Value="60"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,2"/>
        </Style>
    </Fluent:RibbonWindow.Resources>

    <ItemsControl Padding="5">
        <GroupBox Header="Selected file" Padding="5">
            <TextBlock Text="{Binding FileName, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:OpenOptionsWindow}}}"
                       TextWrapping="Wrap"/>
        </GroupBox>
        <GroupBox Header="File password" Padding="5">
            <ItemsControl>
                <TextBlock Text="Leave empty if file has no password."/>
                <PasswordBox Name="filePasswordBox"/>
            </ItemsControl>
        </GroupBox>
        <GroupBox Header="Open as" Padding="5">
            <ItemsControl>
                <Fluent:RadioButton x:Name="invigilateRadioButton"
                                    Header="Invigilate info file"
                                    GroupName="fileTypeGroup"
                                    Checked="OpenAsRadioButtonChecked"
                                    Tag="{x:Static local:SelectedFileType.InvigilateFile}"
                                    IsChecked="True"/>
                <Fluent:RadioButton x:Name="trRadioButton"
                                    Header="Teaching and researching office file"
                                    GroupName="fileTypeGroup"
                                    Checked="OpenAsRadioButtonChecked"
                                    Tag="{x:Static local:SelectedFileType.TROfficeFile}"/>
            </ItemsControl>
        </GroupBox>
        
        <Expander Padding="5">
            <Expander.Header>
                <TextBlock Text="Advanced"/>
            </Expander.Header>
            <ItemsControl>
                <ItemsControl DataContext="{Binding Path=(local:Session.InvigilateFilePolicy)}"
                              Visibility="{Binding IsChecked, ElementName=invigilateRadioButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Fluent:Spinner Header="Sheet"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding Sheet}"/>
                    <Fluent:Spinner Header="Start row"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding StartRow}"/>
                    <Fluent:Spinner Header="Date column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding DateColumn}"/>
                    <Fluent:Spinner Header="Time interval column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding TimeIntervalColumn}"/>
                    <Fluent:Spinner Header="Subject column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding SubjectColumn}"/>
                    <Fluent:Spinner Header="Department column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding DepartmentColumn}"/>
                    <Fluent:Spinner Header="Examinee count column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding ExamineeCountColumn}"/>
                    <Fluent:Spinner Header="Location column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding LocationColumn}"/>
                </ItemsControl>
                <ItemsControl DataContext="{Binding Path=(local:Session.TROfficeFilePolicy)}"
                              Visibility="{Binding IsChecked, ElementName=trRadioButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Fluent:Spinner Header="Sheet"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding Sheet}"/>
                    <Fluent:Spinner Header="Start row"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding StartRow}"/>
                    <Fluent:Spinner Header="Name column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding NameColumn}"/>
                    <Fluent:Spinner Header="People count column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding PeopleCountColumn}"/>
                    <Fluent:Spinner Header="Director column"
                                    Style="{StaticResource OpenOptionsSpinnerStyle}"
                                    Value="{Binding DirectorColumn}"/>
                </ItemsControl>
            </ItemsControl>
        </Expander>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="OK" Click="ButtonClick" Margin="2,0"/>
            <Button Grid.Column="1" Content="Cancel" Click="ButtonClick" Margin="2,0"/>
        </Grid>
    </ItemsControl>
</Fluent:RibbonWindow>
